{
    "env": {
        "browser": 1
    },

    "globals": {
        "CS": 1,
        "P": 1,
        "$": 1,
        "_": 1,
        "React": 1,
        "TweenLite": 1,
        "Modernizr": 1,
        "IN": 1,
        "Grapnel": 1
    },

    "rules": {
        "strict": 0,
        "new-cap": 0,
        "no-underscore-dangle": 0,
        "no-alert": 0,
        "no-console": 0,

        "react/no-multi-comp": 1,
        "react/wrap-multilines": 1,
        "react/self-closing-comp": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1
    },

    "plugins": [
        "react"
    ],

    "ecmaFeatures": {
        "jsx": true
    }
}
